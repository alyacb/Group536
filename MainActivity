        songsList = listSongs();
        for(int i=0; i<songsList.length; i++){
            if(songsList[i].endsWith(".mp3")) {
                Button b = new Button(this);
                b.setId(i);
                b.setText(songsList[i]);
                b.setOnClickListener(new View.OnClickListener() {
